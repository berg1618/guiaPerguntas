<%- include('partials/header') %>
<body>
	<%- include('partials/navbar') %>
	
	<div class="container">
		<hr>
		<h1><%= pergunta.titulo %></h1>
		<p><%= pergunta.descricao %></p>
		<hr>
		<form method="POST" action="/responder">
			<h3>Answer:</h3>
			<textarea placeholder="type your answer" class="form-control" name="corpo"></textarea>
			<br>
			<input type="hidden" name="pergunta" value="<%= pergunta.id %>">
			<button type="submit" class="btn btn-dark">Answer it</button>
			<br>
		</form>
		<hr>
		<h3>Answers:</h3>
		<hr>
		<% respostas.forEach(respostas => { %>
			<div class="card">
				<div class="card-body">
					<p><%= respostas.corpo %></p>
				</div>
			</div>
			<br>
		<% }) %> 
	</div>

</body>
<%- include('partials/footer') %>